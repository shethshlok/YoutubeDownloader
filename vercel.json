{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "150mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "build": {
    "env": {
      "FFMPEG_DIR": ".ffmpeg"
    },
    "scripts": {
      "build": "sh install_ffmpeg.sh"
    }
  }
}